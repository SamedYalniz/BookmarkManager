<!DOCTYPE html>
<html>
  <head>
    <title>Bookmark Manager</title>
  </head>

  <body>
    <% if current_user %>
      Hi <%= current_user.first_name %>!
    <% end %>
    
    <% if flash[:errors] && !flash[:errors].empty? %>
    <ul id="errors">
    <% flash[:errors].each do |error|  %>
    <li>  <%= error %> </li>
    <% end %>
    </ul>
    <% end %>
    <%= yield %>



  </body>
</html>
